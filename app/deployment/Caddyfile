:80 {
    root * /srv
    encode zstd gzip

# If the requested path isn't a real file, serve index.html
    try_files {path} /index.html

# Static files
    file_server

# Caching (optional)
    header /assets/* Cache-Control "public, max-age=31536000, immutable"
    header /index.html Cache-Control "no-cache"
}